  .neumorphic-progress::-webkit-progress-value {
    background: linear-gradient(145deg, #6ab04c, #badc58);
    border-radius: 20rpx; 
    box-shadow: 6rpx 6rpx 12rpx #a3b1c6, -6rpx -6rpx 12rpx #ffffff; 
  }
  
  .stepper-group {
    display: flex;
    align-items: center;
    width: 60%;
  }
  
  .neumorphic-input {
    width: 140rpx; 
    padding: 20rpx; 
    font-size: 32rpx; 
    font-weight: bolder;
    text-align: center;
    color: #555;
    border-radius: 20rpx; 
    background: #e0e5ec;
    box-shadow: inset 10rpx 10rpx 20rpx #a3b1c6, inset -10rpx -10rpx 20rpx #ffffff; 
    border: none;
    outline: none;
    margin: 0 20rpx;
  }
  
  .stepper-button {
    width:40rpx; 
    height: 80rpx; 
    font-size: 36rpx; 
    color: #555;
    background: #e0e5ec;
    border-radius: 20rpx; 
    border: none;
    box-shadow: 10rpx 10rpx 20rpx #a3b1c6, -10rpx -10rpx 20rpx #ffffff;
    transition: all 0.2s ease;
  }
  
  .stepper-button:active {
    box-shadow: inset 10rpx 10rpx 20rpx #a3b1c6, inset -10rpx -10rpx 20rpx #ffffff; 
  }
  